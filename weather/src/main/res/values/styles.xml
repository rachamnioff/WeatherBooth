<resources>
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>
        <style name="TittleBar">
            <item name="android:background">@android:color/white</item>
            <item name="android:textColor">@android:color/black</item>
            <!--        <item name="android:layout_gravity">center_vertical</item>-->
        </style>
        <style name="TittleBar.Menu" parent="TittleBar">
            <item name="android:textSize">@dimen/tittle_bar_menu_text_size</item>
            <item name="android:background">@android:color/transparent</item>
        </style>
        <style name="TittleBar.Tittle" parent="TittleBar">
            <item name="android:textSize">@dimen/tittle_bar_tittle_text_size</item>
            <item name="android:background">@android:color/transparent</item>
        </style>
</resources>
